<%- include('./partials/header.ejs') %>
    <h2><%=recipe.name%></h2>
    <h3>Serves: <%=recipe.qty%></h3>
<ul>
    <p>Ingredients:</p>
    <div class="ingredient-check">
        <input class="ingredient-check-input" type="checkbox" value="" id="flexCheckDefault">
        <label class="ingredient-check-label" for="flexCheckDefault">
            <%=recipe.ingredients%>
        </label>
      </div>
      <p>Directions:</p>
      <div class="direction-check">
        <input class="direction-check-input" type="checkbox" value="" id="flexCheckDefault">
        <label class="direction-check-label" for="flexCheckDefault">
            <%=recipe.directions%>
        </label>
      </div>
    <li>Reference Link: <a href=""><%=recipe.link%></a></li>
</ul>
<img src="<%=recipe.img%>">

<div>
    Tried this recipe out? Tell us your thoughts!
    <input class='comment' type="text" value="comment here">
    <button class="post"> Post </button>
    <script>
        let postButton = document.querySelector(".post")
        postButton.addEventListener("click", handleClickEvent)
        function handleClickEvent() {
            const commentCreate = document.createElement('p')
            commentCreate.innerText = document.querySelector('.comment').value 
            document.querySelector('.commentSection').append(commentCreate)
        }
    </script>    
</div>

<div class="commentSection">
   
</div>
<%- include ('./partials/footer.ejs') %>