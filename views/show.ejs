<%- include('./partials/header.ejs') %>
    <h2><%=recipe.name%></h2>
    <h3>Serves: <%=recipe.qty%></h3>
<ul>
    <li>Ingredients: <%=recipe.ingredients%></li>
    <li>Directions: <%=recipe.directions%></li>
    <li>Reference Link: <a href=""><%=recipe.link%></a></li>
</ul>
<img src="<%=recipe.img%>">

<footer>
    <a href="/recipes">Back to recipes</a>
    <a href="/recipes/<%=recipe.id%>/edit">Edit this recipe</a>

    <form action="/recipes/<%= recipe.id%>?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
    </form>
    
    <form action="/recipes/<%=recipe.id%>/public?_method=PUT" method="POST">
        <input type="hidden" name="name" value="<%=recipe.name%>">
        <input type="submit" value="Share">
    </form>
</footer>
<%- include ('./partials/footer.ejs') %>